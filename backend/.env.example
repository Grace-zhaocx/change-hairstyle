# AI智能换发型网站 - 开发环境配置

# 基础配置
PROJECT_NAME=AI Hairstyle API
VERSION=1.0.0
API_V1_STR=/api/v1
SECRET_KEY=dev-secret-key-change-in-production-12345

# 环境配置
ENVIRONMENT=development
DEBUG=true

# 服务器配置
HOST=0.0.0.0
PORT=8000
ALLOWED_HOSTS=["*"]

# 数据库配置
DATABASE_URL=sqlite+aiosqlite:///./hairstyle_dev.db

# Redis配置
REDIS_URL=redis://localhost:6379

# MinIO配置
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=hairstyle-dev
MINIO_SECURE=false

# JWT配置
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# 文件上传配置
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=["image/jpeg", "image/png", "image/webp"]
UPLOAD_DIR=uploads

# AI模型配置
MODEL_CACHE_DIR=./models
DEFAULT_DEVICE=cpu
MAX_CONCURRENT_TASKS=2
TASK_TIMEOUT=300

# 处理参数默认值
DEFAULT_BLEND_STRENGTH=0.85
DEFAULT_EDGE_SMOOTHING=0.7
DEFAULT_LIGHTING_MATCH=0.6

# 限流配置
RATE_LIMIT_UPLOAD_PER_HOUR=20
RATE_LIMIT_PROCESS_PER_DAY=50

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# CORS配置
BACKEND_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Prometheus配置
PROMETHEUS_PORT=9090
ENABLE_METRICS=true