# 数据库配置
DATABASE_URL=sqlite+aiosqlite:///./data/hairstyle.db
# DATABASE_URL=postgresql://postgres:password@localhost:5432/hairstyle_db

# Redis配置
REDIS_URL=redis://localhost:6379

# MinIO对象存储配置
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=hairstyle
MINIO_SECURE=false

# 应用配置
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=your-super-secret-key-change-this-in-production

# 服务器配置
HOST=0.0.0.0
PORT=8000

# JWT配置
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# 文件上传配置
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# AI模型配置
MODEL_CACHE_DIR=./models
DEFAULT_DEVICE=cpu
MAX_CONCURRENT_TASKS=2
TASK_TIMEOUT=300

# 处理参数默认值
DEFAULT_BLEND_STRENGTH=0.85
DEFAULT_EDGE_SMOOTHING=0.7
DEFAULT_LIGHTING_MATCH=0.6

# 限流配置
RATE_LIMIT_UPLOAD_PER_HOUR=20
RATE_LIMIT_PROCESS_PER_DAY=50

# 前端配置
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000

# 监控配置
PROMETHEUS_PORT=9090
ENABLE_METRICS=true

# CORS配置
ALLOWED_HOSTS=http://localhost:3000,http://127.0.0.1:3000